<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.apache.maven.plugins</groupId>
  <artifactId>fitnesse-maven-plugin-sample-multiproject-root</artifactId>
  <packaging>pom</packaging>
  <name>Maven FitNesse Plugin Multiproject RACINE</name>
  <description>Maven FitNesse Plugin Multiproject RACINEs</description>
  <version>1.0-SNAPSHOT</version>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>fitnesse-maven-plugin-sample-multiproject-jar2</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>
  </dependencies>
  <reporting>
    <plugins>
       <plugin>
        <artifactId>maven-clover-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>fitnesse-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>fitnesse-maven-plugin</artifactId>
        <version>1.0-beta-2-SNAPSHOT</version>
        <configuration>
          <debug>false</debug>
          <classPathProvider>fitnesse</classPathProvider>
          <failOnError>true</failOnError>
          <fitnesses>
            <fitnesse>
                <hostName>localhost</hostName>
                <port>80</port>
                <pageName>FitnesseIntegrationTest.SuiteCoverage</pageName>
            </fitnesse>            
            <fitnesse>
                <hostName>localhost</hostName>
                <port>80</port>
                <pageName>FitnesseIntegrationTest.SuiteCoverage3</pageName>
                <!--serverId>fitnesseTest</serverId-->
            </fitnesse>            
          </fitnesses>
    
        </configuration>
        <executions>
          <execution>
            <id>site</id>
            <phase>pre-site</phase>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
      <artifactId>maven-clover-plugin</artifactId>
        <configuration>
          <licenseLocation>D:/maven/repository/clover/licenses/clover.license</licenseLocation>
        </configuration>
        <executions>
          <execution>
            <id>site</id>
            <phase>pre-site</phase>
            <goals>
              <goal>instrument</goal>
              <goal>aggregate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <modules>
    <module>common</module>
    <module>jar1</module>
    <module>jar2</module>
    <module>war1</module>
    <module>ear1</module>
  </modules>
</project>
